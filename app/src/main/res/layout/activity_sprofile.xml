                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/spacing_large"
                android:src="@drawable/person"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:civ_border_width="2dp" />

            <LinearLayout
